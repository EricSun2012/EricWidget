<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.EricSun.EricWidget.Widget.RoundProgressBar

        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        app:max="100"
        app:progressSize="40"
        app:roundColor="@color/color_aqua"
        app:roundProgressColor="@color/color_dodgerBlue"
        app:roundWidth="5dp"
        app:textColor="@color/color_dimGray"
        app:textSize="20sp" />


    <com.EricSun.EricWidget.Widget.ProgressView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:padding="4dp"
        app:bacColor="@color/color_dodgerBlue"
        app:forColor="@color/color_red"
        app:progress="37"
        app:startAngle="194"
        app:sweepAngle="150" />

</LinearLayout>